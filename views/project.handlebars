<div class='text-center'>
  <h2>{{name}}</h2>
 
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
   
   {{#if logged_in}}

<h2 class="text-center comment-header">Comments</h2>

		<form class="new-comment-form formCont d-flex flex-wrap justify-content-center" data-blogid={{id}}>
        <div>
				<textarea id='comment_description' name="comment-body" type="text"
				placeholder="Enter your comment here..."
				cols="30"
				rows="2"></textarea>
			</div>
			<div class="btnComment p-2">
				<button class="button btn btn-success" type="submit">Leave a Comment</button>
			</div>
		</form>
<p id="commentList">
      <br>
    </p>

		{{/if}}

		
    
		{{#each comments as |comment|}}
		<div>
			<p class="text-center" id="comment.descrip">{{comment.description}}</p>
			<p class="text-center"><span>~</span>Created by {{comment.user.username}}<span>~</span></p>
		</div>
		{{/each}}

</div>
   <script src="/js/comment.js"></script>
</div>